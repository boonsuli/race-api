<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">
    <configuration>
        <date-format>yyyy-MM-dd HH:mm:ss</date-format>
    </configuration>

    <mapping date-format="yyyy-MM-dd HH:mm:ss">
        <class-a>com.trailerplan.model.entity.RaceEntity</class-a>
        <class-b>com.trailerplan.model.dto.RaceDTO</class-b>
        <field>
            <a date-format="yyyy-MM-dd HH:mm:ss">race_date</a>
            <b date-format="yyyy-MM-dd HH:mm:ss">race_date</b>
        </field>
    </mapping>

</mappings>